<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="dividerColor" format="color" />

    <style name="Divider.Shadow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">3dp</item>
        <item name="android:background">@drawable/shadow_top</item>
    </style>

    <style name="Divider" />

    <style name="Divider.Vertical">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0.5dp</item>
        <item name="android:background">#99959595</item>
    </style>

    <style name="Divider.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">#99959595</item>
    </style>
</resources>